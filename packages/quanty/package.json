{
  "name": "@quanty/framework",
  "version": "2.0.0",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "source": "src/index.ts",
  "author": "slashtp3",
  "files": [
    "dist/src/**"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "swc src -d ./dist/src && tsc --emitDeclarationOnly",
    "lint": "cross-env TIMING=1 eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "echo TESTING QUANTY/FRAMEWORK",
    "test:bot": "tsnd --respawn test/index.ts",
    "dev": "concurrently \"yarn watch-compile-client\" \"yarn watch-compile-bot\" \"yarn watch-dev\" \"yarn watch-tsc\"",
    "generate-joi-types": "tsnd ./generate-joi.ts",
    "watch-compile-client": "swc src -w -d ./dist/src",
    "watch-compile-bot": "swc test -w -s -d ./dist/test",
    "watch-dev": "nodemon --delay 1 --watch \"dist/**/*\" -e js ./dist/test/index.js",
    "watch-tsc": "tsc -w --pretty --skipLibCheck --noEmit -p tsconfig.json",
    "dev:build": "swc src --out-dir dist/src -w --sync & tsc -w --pretty --skipLibCheck --noEmit",
    "format": "prettier --write src",
    "mongogen": "mtgen ./src/database/schemas -o ./src/types/"
  },
  "dependencies": {
    "chalk": "4.1.2",
    "discord.js": "^13.8.0",
    "dotenv": "^16.0.1",
    "glob": "^7.2.0",
    "joi": "^17.6.0",
    "moment": "^2.29.3"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.2.204",
    "@types/glob": "^7.2.0",
    "@types/node": "^17.0.35",
    "@types/source-map-support": "^0.5.4",
    "chokidar": "^3.5.3",
    "concurrently": "^7.2.2",
    "config": "*",
    "eslint": "^8.16.0",
    "joi-to-typescript": "^4.0.5",
    "nodemon": "^2.0.16",
    "rimraf": "^3.0.2",
    "source-map-support": "^0.5.20",
    "ts-node-dev": "^2.0.0-0",
    "tsconfig": "*",
    "typescript": "^4.7.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/slashtp3/quanty.git"
  },
  "engines": {
    "node": ">=16.6.0",
    "npm": ">=7.0.0"
  },
  "keywords": [
    "discord",
    "bot",
    "framework",
    "typescript",
    "discord-ts"
  ],
  "bugs": {
    "url": "https://github.com/slashtp3/quanty/issues"
  },
  "homepage": "https://github.com/slashtp3/quanty#readme"
}
