{
  "name": "@quanty/framework",
  "version": "2.0.0",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "source": "src/index.ts",
  "author": "slashtp3",
  "files": [
    "dist/src/**"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc -p ./tsconfig.build.json",
    "lint": "cross-env TIMING=1 eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "echo TESTING QUANTY/FRAMEWORK",
    "test:bot": "tsnd --respawn test/index.ts",
    "dev:build": "swc src --out-dir dist/src -w --sync & tsc -w --pretty --skipLibCheck --noEmit",
    "format": "prettier --write src",
    "mongogen": "mtgen ./src/database/schemas -o ./src/types/"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/node": "^17.0.35",
    "config": "*",
    "eslint": "^8.16.0",
    "rimraf": "^3.0.2",
    "ts-node-dev": "^2.0.0-0",
    "tsconfig": "*",
    "typescript": "^4.7.2"
  },
  "dependencies": {
    "chalk": "4.1.2",
    "discord.js": "13.7.0",
    "dotenv": "^16.0.1",
    "glob": "^7.2.0",
    "moment": "^2.29.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/slashtp3/quanty.git"
  },
  "engines": {
    "node": ">=16.6.0",
    "npm": ">=7.0.0"
  },
  "keywords": [
    "discord",
    "bot",
    "framework",
    "typescript",
    "discord-ts"
  ],
  "bugs": {
    "url": "https://github.com/slashtp3/quanty/issues"
  },
  "homepage": "https://github.com/slashtp3/quanty#readme"
}
