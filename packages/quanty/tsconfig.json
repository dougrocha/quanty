{
  "extends": "tsconfig/quanty.json",
  "compilerOptions": {
    "rootDir": "./",
    "baseUrl": "./src",
    "outDir": "dist",

    "moduleResolution": "node",
    "importsNotUsedAsValues": "preserve"
  },
  "include": ["src/**/*", "test/**/*", ".eslintrc.js", "environment.d.ts"],
  "exclude": ["node_modules", "dist/**/*", "**/*.spec.ts", "generate-joi.ts"]
}
