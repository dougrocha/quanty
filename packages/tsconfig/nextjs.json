{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next.js",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNEXT",
    "lib": ["ES6", "ES7", "ESNext", "DOM", "DOM.Iterable"],
    "allowJs": true,

    "jsx": "preserve",

    "moduleResolution": "node",

    "noEmit": true,
    "incremental": true,
    "isolatedModules": true
  }
}
