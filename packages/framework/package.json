{
  "name": "@quanty/framework",
  "version": "0.0.1",
  "private": "false",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "source": "src/index.ts",
  "author": "Douglas Rocha",
  "files": [
    "dist/src/**",
    "README.md",
    "LICENSE.md"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "swc src -d ./dist/src && tsc --project tsconfig.build.json --emitDeclarationOnly",
    "build:watch": "swc src --out-dir dist/src -w --sync & tsc -w --pretty --skipLibCheck --noEmit",
    "debug": "ts-node-dev --files --transpile-only --respawn --inspect=4321 --project tsconfig.json src/server.ts",
    "lint": "TIMING=1 eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "echo TESTING QUANTY/FRAMEWORK",
    "dev": "yarn with-env concurrently \"yarn watch-compile-client\" \"yarn watch-compile-bot\" \"yarn watch-dev\" \"yarn watch-tsc\"",
    "watch-compile-client": "swc src -w -d ./dist/src",
    "watch-compile-bot": "swc test -w -s -d ./dist/test",
    "watch-dev": "nodemon --delay 1 --watch \"./dist/**/*\" -e js ./dist/test/index.js",
    "watch-tsc": "tsc -w --pretty --skipLibCheck --noEmit -p tsconfig.json",
    "format": "prettier --write src",
    "prepublish": "yarn build",
    "with-env": "dotenv -e ../../.env --"
  },
  "peerDependencies": {
    "discord.js": "^14.6.0"
  },
  "dependencies": {
    "chalk": "4.1.2",
    "date-fns": "^2.29.3",
    "discord.js": "^14.7.1",
    "dotenv": "^16.0.3",
    "glob": "^7.2.3",
    "reflect-metadata": "^0.1.13",
    "zod": "^3.20.6"
  },
  "devDependencies": {
    "@quanty/config": "*",
    "@quanty/tsconfig": "*",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.36",
    "@types/glob": "^7.2.0",
    "@types/node": "^18.14.0",
    "@types/source-map-support": "^0.5.6",
    "chokidar": "^3.5.3",
    "concurrently": "^7.6.0",
    "dotenv-cli": "^7.0.0",
    "eslint": "^8.34.0",
    "nodemon": "^2.0.20",
    "rimraf": "^4.1.2",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/slashtp3/quanty.git"
  },
  "engines": {
    "node": ">=16.6.0",
    "npm": ">=7.0.0"
  },
  "keywords": [
    "Discord",
    "Bot",
    "Framework",
    "Typescript",
    "Discord-ts",
    "Typescript"
  ],
  "bugs": {
    "url": "https://github.com/slashtp3/quanty/issues"
  },
  "homepage": "https://github.com/slashtp3/quanty#readme"
}
