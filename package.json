{
  "name": "quanty-monorepo",
  "version": "0.0.0",
  "private": true,
  "packageManager": "yarn@1.22.17",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "nohoist": [
      "**/@nestjs",
      "**/@nestjs/**"
    ]
  },
  "scripts": {
    "dev": "turbo run dev --parallel --no-cache --continue --scope=*app*",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "turbo run format",
    "prepare": "husky install",
    "pre-commit": "yarn format"
  },
  "devDependencies": {
    "husky": "^8.0.1",
    "lint-staged": "^12.3.7",
    "prettier": "^2.6.1",
    "turbo": "^1.2.16"
  },
  "lint-staged": {
    "apps/**/*.{ts,tsx}": [],
    "packages/**/*.{ts,tsx}": [],
    "*.json": "prettier --write"
  }
}
