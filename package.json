{
  "name": "quanty-monorepo",
  "version": "0.0.0",
  "private": true,
  "packageManager": "yarn@1.22.17",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "nohoist": [
      "**/@nestjs",
      "**/@nestjs/**"
    ]
  },
  "scripts": {
    "dev": "turbo run dev --parallel --no-cache --continue --scope=*app*",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "turbo run format",
    "prepare": "husky install",
    "pre-commit": "yarn test && yarn lint && yarn format"
  },
  "devDependencies": {
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.4",
    "prettier": "^2.5.1",
    "turbo": "1.1.5"
  },
  "lint-staged": {
    "apps/**/*.{ts,tsx}": [],
    "packages/**/*.{ts,tsx}": [],
    "*.json": "prettier --write"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
