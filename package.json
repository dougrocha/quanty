{
  "name": "quanty",
  "private": true,
  "packageManager": "yarn@3.2.4",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ]
  },
  "scripts": {
    "dev": "turbo run dev --parallel --no-cache --continue --scope=*app*",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "turbo run format"
  },
  "devDependencies": {
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "turbo": "^1.6.3"
  },
  "lint-staged": {
    "*.json": "prettier --write"
  }
}

