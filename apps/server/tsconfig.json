{
  "extends": "tsconfig/server.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",

    "incremental": true,

    "rootDir": ".",
    "baseUrl": ".",
    "sourceRoot": "src",
    "outDir": "dist",

    "skipLibCheck": true,
    "strictPropertyInitialization": false
  },
  "include": ["src", "test", "environment.d.ts", ".eslintrc.js"],
  "exclude": ["node_modules"]
}
