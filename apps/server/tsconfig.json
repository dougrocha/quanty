{
  "extends": "tsconfig/server.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",

    "incremental": true,

    "rootDirs": ["./", "./test"],
    "baseUrl": "./",
    "sourceRoot": "src",
    "outDir": "dist",

    "types": ["jest", "node"],

    "skipLibCheck": true,
    "strictPropertyInitialization": false
  },
  "include": [
    "./src/**/*.ts",
    "./test/**/*.ts",
    "environment.d.ts",
    ".eslintrc.js"
  ],
  "exclude": ["node_modules"]
}
