{
  "extends": "@quanty/tsconfig/server.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",

    "incremental": true,

    "rootDirs": ["./src", "./test"],
    "baseUrl": "./src",
    "sourceRoot": "src",
    "outDir": "dist",

    "types": ["jest", "node", "express-session"],

    "paths": {
      "users/*": ["users/*"]
    },

    "strictPropertyInitialization": false
  },
  "include": [
    "./src/**/*.ts",
    "./test/**/*.ts",
    "./prisma/**/*.ts",
    "environment.d.ts"
  ],
  "exclude": ["node_modules"]
}

