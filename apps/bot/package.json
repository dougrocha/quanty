{
  "name": "app-bot",
  "version": "0.1.0-dev",
  "description": "A powerful discord bot built to provide features for both moderators and users",
  "main": "scr/index.ts",
  "author": "Douglas Rocha <79188161+slashtp3@users.noreply.github.com>",
  "license": "MIT",
  "repository": "https://github.com/slashtp3/Quanty.git",
  "private": true,
  "scripts": {
    "prebuild": "rimraf dist && prisma generate",
    "build": "swc src -d ./dist/src && tsc --noEmit",
    "debug": "ts-node --debug -r dotenv/config src/index.ts",
    "dev": "concurrently \"yarn watch-compile\" \"yarn watch-dev\" \"yarn watch-tsc\"",
    "watch-compile": "swc src -w -d ./dist/src",
    "watch-prisma": "prisma generate --watch",
    "watch-dev": "nodemon --delay 1 --watch \"dist/**/*\" -e js ./dist/src/index.js",
    "watch-tsc": "tsc -w --pretty --skipLibCheck --noEmit -p tsconfig.json",
    "start": "cross-env NODE_ENV=production node --experimental-specifier-resolution=node ./dist/src/index.js",
    "test": "echo TESTING BOT",
    "lint": "cross-env TIMING=1 eslint src --fix",
    "format": "prettier --write src"
  },
  "dependencies": {
    "@prisma/client": "^4.3.1",
    "@quanty/framework": "*",
    "axios": "^0.27.2",
    "better-erela.js-apple": "^1.0.4",
    "chalk": "^4.1.2",
    "date-fns": "^2.29.3",
    "discord-html-transcripts": "~2.6.0",
    "discord.js": "^14.6.0",
    "erela.js": "^2.3.3",
    "erela.js-spotify": "^1.2.0",
    "glob": "^7.2.0",
    "nekos.life": "^3.0.0"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.2.224",
    "chokidar": "^3.5.3",
    "concurrently": "^7.3.0",
    "config": "*",
    "cross-env": "^7.0.3",
    "nodemon": "^2.0.19",
    "prisma": "^4.3.1",
    "rimraf": "^3.0.2",
    "tsconfig": "*",
    "typescript": "^4.7.4"
  }
}
