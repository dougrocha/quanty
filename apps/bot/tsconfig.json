{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "tsconfig/quanty.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "dist",

    "declaration": false,
    "declarationMap": false,

    "strictPropertyInitialization": false
  },
  "include": ["src", "environment.d.ts", ".eslintrc.js"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts"],
  "ts-node": {
    "transpileOnly": true
  }
}
